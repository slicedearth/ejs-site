<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
    <link rel='stylesheet' href='/css/style.css' />
    <title>Shop--</title>
</head>

<body>
    <nav class="navbar is-transparent" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item has-text-primary is-size-2 has-text-weight-semibold is-italic" href="/">
                Bulma Site
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-end">
                <a class="navbar-item" href="/">
                    Home
                </a>
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        Our Products
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item" href="/products">
                            All Products
                        </a>
                        <% productCategories.forEach(function(item) { %>
                        <a class="navbar-item" href="/products/<%= item.shortCat %>">
                            <%= item.category %>
                        </a>
                        <% }); %>
                    </div>
                </div>
                <a class="navbar-item" href="/testimonials">
                    Testimonials
                </a>
                <a class="navbar-item" href="/aboutus">
                    About Us
                </a>
            </div>
        </div>
    </nav>