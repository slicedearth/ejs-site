<%- include('templates/header'); -%>
<div class="section section-padding">
    <div class="container">
        <h2 class="is-size-3 has-text-centered has-text-primary has-text-weight-semibold">About Us</h2>
        <%# Testimonial Loop %>
        <% aboutList.forEach(function(item) { %>
        <div class="column">
            <div class="card">
                <div class="card-header">
                    <div class="card-header-title has-text-centered is-size-4 is-italic is-centered">
                        <%= item.name %>
                    </div>
                </div>

                <div class="card-content is-size-5"><%= item.jobtitle %></div>
                <div class="card-footer">
                    <div class="card-footer-item is-size-6 is-italic">- <%= item.bio %></div>
                </div>
            </div>
        </div>
        <%  }); %>
    </div>
</div>
<%- include('templates/footer'); -%>